<odoo>

    <record id="view_inventory_numeric_stat_tree" model="ir.ui.view">
        <field name="name">inventory.numeric.stat.tree</field>
        <field name="model">inventory.numeric.stat</field>
        <field name="arch" type="xml">
            <tree>
                <field name="field_title"/>
                <field name="min_value"/>
                <field name="max_value"/>
                <field name="avg_value"/>
            </tree>
        </field>
    </record>

    <record id="view_inventory_numeric_stat_form" model="ir.ui.view">
        <field name="name">inventory.numeric.stat.form</field>
        <field name="model">inventory.numeric.stat</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="field_title"/>
                        <field name="min_value"/>
                        <field name="max_value"/>
                        <field name="avg_value"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
