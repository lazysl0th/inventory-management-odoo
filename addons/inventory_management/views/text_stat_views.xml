<odoo>

    <record id="view_inventory_text_stat_tree" model="ir.ui.view">
        <field name="name">inventory.text.stat.tree</field>
        <field name="model">inventory.text.stat</field>
        <field name="arch" type="xml">
            <tree>
                <field name="field_title"/>
                <field name="distinct_count"/>
            </tree>
        </field>
    </record>

    <record id="view_inventory_text_stat_form" model="ir.ui.view">
        <field name="name">inventory.text.stat.form</field>
        <field name="model">inventory.text.stat</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="field_title"/>
                        <field name="distinct_count"/>
                    </group>

                    <notebook>
                        <page string="Top Values">
                            <field name="top_value_ids">
                                <tree editable="bottom">
                                    <field name="value"/>
                                    <field name="count"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
